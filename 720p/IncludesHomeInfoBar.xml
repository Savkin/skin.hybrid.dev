			<include>HomeInfoBarContent</include>
			<visible>!Skin.HasSetting(HorizontalHomeScreen)</visible>
		</control>
		<control type="group">
			<posx>420</posx>
			<posy>580</posy>
			<animation effect="slide" end="880,0" time="300" tween="quadratic" easing="out">WindowClose</animation>
