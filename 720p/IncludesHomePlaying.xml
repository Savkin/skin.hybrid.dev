<includes>
	<include name="ShowNowPlayingMedia">
		<control type="group">
			<!-- Vertical Music Info -->
			<posx>500r</posx>
			<posy>243r</posy>
			<visible>!Skin.HasSetting(HorizontalHomeScreen) + Player.HasAudio</visible>
			<include>VisibleFadeEffect</include>
			<include>Window_OpenClose_Animation</include>
			<animation effect="slide" start="600,0" end="0,0" time="900" delay="1200" condition="Player.HasMedia">conditional</animation>
			<animation effect="slide" end="900,0" time="300" tween="quadratic" easing="out" condition="Window.IsVisible(Favourites) | Window.IsVisible(CustomSuggestedMovies.xml) | Window.IsVisible(CustomSuggestedEpisodes.xml) | Window.IsVisible(CustomSuggestedAlbums.xml)">Conditional</animation>
			<control type="image">
				<posx>0</posx>
				<posy>25</posy>
				<width>200</width>
				<height>78</height>
				<texture fallback="XBMC_Logo.png">$INFO[Player.FolderPath,,../logo.png]</texture>
				<aspectratio align="bottom">keep</aspectratio>
			</control>
			<control type="image">
				<description>Cd overlay</description>
				<posx>320</posx>
				<posy>30</posy>
				<width>170</width>
				<height>175</height>
				<include>CDArtSpinner</include>
				<aspectratio align="bottom">keep</aspectratio>
				<texture fallback="Disks/DefaultCDArt.png">$INFO[Player.FolderPath,,cdart.png]</texture>
				<!--animation effect="slide" start="-70" end="0" time="1200" tween="cubic" easing="out" delay="2000">WindowOpen</animation-->
				<visible>![SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left)] + !Skin.HasSetting(HideCDArt)</visible>
			</control>
			<control type="image">
				<description>Cover Image</description>
				<posx>240</posx>
				<posy>28</posy>
				<width>180</width>
				<height>180</height>
				<aspectratio aligny="bottom">stretch</aspectratio>
				<texture fallback="DefaultFallback/DefaultAlbumCover.png" diffuse="CDCase/cdcase-diffuse.png">$INFO[MusicPlayer.Cover]</texture>
				<visible>![SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left)] + !Skin.HasSetting(HideCDArt)</visible>
			</control>
			<control type="image">
				<description>cover image</description>
				<posx>220</posx>
				<posy>0</posy>
				<width>300</width>
				<height>230</height>
				<texture fallback="DefaultFallback/DefaultAlbumCover.png">$INFO[MusicPlayer.Cover]</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
				<bordertexture border="8">ThumbShadow.png</bordertexture>
				<bordersize>8</bordersize>
				<visible>SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left) | Skin.HasSetting(HideCDArt)</visible>
			</control>
			<control type="image">
				<description>CD Case</description>
				<posx>225</posx>
				<posy>25</posy>
				<width>198</width>
				<height>186</height>
				<aspectratio aligny="bottom">stretch</aspectratio>
				<texture>CDCase/cdcase.png</texture>
				<visible>![SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left)] + !Skin.HasSetting(HideCDArt)</visible>
			</control>
			<control type="label">
				<description>Album Label</description>
				<posx>200</posx>
				<posy>115</posy>
				<height>25</height>
				<width>580</width>
				<label>$INFO[MusicPlayer.Artist,, - ]$INFO[MusicPlayer.Album]$INFO[musicplayer.discnumber, - $LOCALIZE[427]:]</label>
				<align>right</align>
				<aligny>center</aligny>
				<font>font12</font>
				<textcolor>NowPlayAlbum</textcolor>
				<shadowcolor>black</shadowcolor>
				<visible>![SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left)]</visible>
			</control>
			<control type="label">
				<description>Album Label</description>
				<posx>200</posx>
				<posy>115</posy>
				<height>25</height>
				<width>580</width>
				<label>$LOCALIZE[460] $LOCALIZE[31040]</label>
				<align>right</align>
				<aligny>center</aligny>
				<font>font12</font>
				<textcolor>NowPlayAlbum</textcolor>
				<shadowcolor>black</shadowcolor>
				<visible>SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left)</visible>
			</control>
			<control type="label">
				<description>Title label</description>
				<posx>200</posx>
				<posy>145</posy>
				<height>30</height>
				<width>540</width>
				<label>$INFO[MusicPlayer.Title]</label>
				<align>right</align>
				<aligny>center</aligny>
				<font>font13_title</font>
				<textcolor>NowPlayTitle</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="label">
				<description>Time Label</description>
				<posx>200</posx>
				<posy>178</posy>
				<height>30</height>
				<width>300</width>
				<label>$INFO[Player.Time]$INFO[Player.Duration,[COLOR=HomeInfoTwo] / [/COLOR]]</label>
				<align>right</align>
				<aligny>center</aligny>
				<font>font12</font>
				<textcolor>NowPlayTime</textcolor>
				<shadowcolor>black</shadowcolor>
				<visible>![SubString(Player.FolderPath,mms://,Left) | SubString(Player.FolderPath,http://,Left)]</visible>
			</control>
		</control>
		<control type="group">
			<!-- Horizontal Music Info -->
			<posx>0</posx>
			<posy>400r</posy>
			<visible>Skin.HasSetting(HorizontalHomeScreen) + Player.HasAudio</visible>
			<include>VisibleFadeEffect</include>
